#!/usr/bin/env bash

_gsnapup()
{
    local cur script coms opts com
    COMPREPLY=()
    _get_comp_words_by_ref -n : cur words

    # for an alias, get the real script behind it
    if [[ $(type -t ${words[0]}) == "alias" ]]; then
        script=$(alias ${words[0]} | sed -E "s/alias ${words[0]}='(.*)'/\1/")
    else
        script=${words[0]}
    fi

    # lookup for command
    for word in ${words[@]:1}; do
        if [[ $word != -* ]]; then
            com=$word
            break
        fi
    done

    # completing for an option
    if [[ ${cur} == --* ]] ; then
        opts="--help --quiet --verbose --version --ansi --no-ansi --no-interaction --working-dir"

        case "$com" in
            help)
            opts="${opts} --format --raw"
            ;;
            init)
            opts="${opts} --timezone --cron --date --time --snapshot"
            ;;
            list)
            opts="${opts} --raw --format"
            ;;
            snapshot)
            opts="${opts} --no-op --async"
            ;;
            instance:add)
            opts="${opts} "
            ;;
            instance:available)
            opts="${opts} --zone"
            ;;
            instance:disable)
            opts="${opts} "
            ;;
            instance:enable)
            opts="${opts} "
            ;;
            instance:list)
            opts="${opts} "
            ;;
            instance:remove)
            opts="${opts} "
            ;;
            instance:update)
            opts="${opts} "
            ;;

        esac

        COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
        __ltrim_colon_completions "$cur"

        return 0;
    fi

    # completing for a command
    if [[ $cur == $com ]]; then
        coms="help init list snapshot instance:add instance:available instance:disable instance:enable instance:list instance:remove instance:update"

        COMPREPLY=($(compgen -W "${coms}" -- ${cur}))
        __ltrim_colon_completions "$cur"

        return 0
    fi
}

complete -o default -F _gsnapup gsnapup
complete -o default -F _gsnapup gsnapup.phar
