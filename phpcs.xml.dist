<?xml version="1.0"?>
<ruleset name="PSR-1 + PSR-2">
    <!-- Configs -->
    <arg name="colors" />
    <arg value="sp" />

    <!-- Rules -->
    <rule ref="PSR1"/>

    <rule ref="PSR2">
        <exclude name="Squiz"/>

        <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody"/>
    </rule>

    <!-- Files -->
    <file>./source</file>
    <file>./tests/source</file>
</ruleset>